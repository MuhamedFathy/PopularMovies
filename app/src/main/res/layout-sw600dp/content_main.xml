<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="net.mEmoZz.PopMovies.frags.MainActivity"
    tools:ignore="MissingPrefix">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="net.mEmoZz.PopMovies.frags.MoviesFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@android:layout/list_content" />

    <FrameLayout
        android:id="@+id/detailFrameContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <RelativeLayout
            android:id="@+id/cornStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/corn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mov_corn"
                android:tint="#80000000" />

            <TextView
                android:id="@+id/dummyCorn"
                fontPath="fonts/Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/corn"
                android:paddingTop="22dp"
                android:text="@string/choose_mov"
                android:textColor="#80000000"
                android:textSize="22sp" />

        </RelativeLayout>
    </FrameLayout>
</LinearLayout>